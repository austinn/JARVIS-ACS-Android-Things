<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manage_access_key"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_green"
    tools:context="com.mgenio.jarvisofficedoor.activities.ManageAccessKeyActivity">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_green"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/MyToolbar"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_access_keys"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_access_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:elevation="12dp"
        android:src="@mipmap/ic_person_add_white_24dp"
        app:backgroundTint="@color/material_dark_purple"/>

</RelativeLayout>
