<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_access_key"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/layout_access_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_access_key_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:src="@mipmap/ic_account_circle_black_24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_access_key_image"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_access_key_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Austin Nelson"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Type"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_access_key_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>